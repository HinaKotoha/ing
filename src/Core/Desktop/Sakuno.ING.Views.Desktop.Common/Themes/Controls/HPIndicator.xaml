<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:local="clr-namespace:Sakuno.ING.Views.Desktop.Controls">
    <Style TargetType="local:HPIndicator">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:HPIndicator">
                    <Border BorderThickness="1"
                            BorderBrush="Gray"
                            CornerRadius="1">
                        <Grid Name="PART_Track"
                              Background="{TemplateBinding Background}">
                            <Rectangle Name="PART_Addition"
                                       HorizontalAlignment="Left"
                                       Fill="{TemplateBinding AdditionalBrush}" />
                            <Rectangle Name="PART_Main"
                                       HorizontalAlignment="Left"
                                       Fill="{TemplateBinding Foreground}" />
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
