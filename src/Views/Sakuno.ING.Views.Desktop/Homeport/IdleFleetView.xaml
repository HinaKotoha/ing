<rxui:ReactiveUserControl x:Class="Sakuno.ING.Views.Desktop.Homeport.IdleFleetView"
                          x:TypeArguments="viewmodel:FleetOverviewViewModel"
                          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                          xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                          xmlns:rxui="http://reactiveui.net"
                          xmlns:viewmodel="clr-namespace:Sakuno.ING.ViewModels.Homeport;assembly=Sakuno.ING.ViewModels"
                          mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <TextBlock Name="Id" />
        <TextBlock Name="IdleState" Text="待機中" TextAlignment="Center" Grid.Column="1" />
        <TextBlock Name="ShouldSupplyState" Text="未補給" TextAlignment="Center" Grid.Column="1" />
    </Grid>
</rxui:ReactiveUserControl>
